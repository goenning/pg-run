{
  "env": {
    "node": true,
    "mocha": true,
    "es6": true
  },
  "rules": {
    "indent": [2, 2],
    "semi": [2, "never"],
    "quotes": [2, "single"],
    "curly": 2,
    "max-len": [2, 100, 4],
    "camelcase": 0,
    "no-unused-vars": [2, {"args":"none"}],
    "no-underscore-dangle": 0,
    "no-multi-spaces": 0,
    "key-spacing": 0,
    "no-shadow": 0,
    "space-after-keywords": [2, "always"],
    "space-before-blocks": [2, "always"]
  }
}
